---
import Layout from '../layouts/Layout.astro';
import ModsSection from "../components/FeaturedModsSection.astro";
import { useTranslations } from '../i18n/utils';
import { defaultLang } from "../i18n/ui";

const locale = Astro.currentLocale || defaultLang;
const t = useTranslations(locale);
---

<Layout title={t('modsPage.title')} navbarVariant="main">
  <ModsSection title={t('modsPage.title')} subtitle={t('modsPage.subtitle')} />
</Layout>
