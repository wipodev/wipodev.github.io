---
import useTranslation from "astro-i18next";
const { t } = await useTranslation();
---
<section id="contact" class="contact">
  <h2>{t("contact.title")}</h2>
  <div class="contact-wrapper">
    <p>{t("contact.prompt")}</p>
    <form class="contact-form">
      <input type="text" placeholder={t("contact.name")} />
      <input type="email" placeholder={t("contact.email")} />
      <textarea rows="4" placeholder={t("contact.message")}></textarea>
      <button type="submit" class="scroll-button section-button">{t("contact.send")}</button>
    </form>
    <div class="social-links">
      <a href="https://github.com/wipodev" target="_blank" title="GitHub">
        <img src="https://cdn.simpleicons.org/github/00ffcc" alt="GitHub" />
      </a>
      <a href="https://discord.gg/dznFddZN" target="_blank" title="Discord">
        <img src="https://cdn.simpleicons.org/discord/00ffcc" alt="Discord" />
      </a>
      <a href="https://t.me/wipodev_bot" target="_blank" title="Telegram">
        <img src="https://cdn.simpleicons.org/telegram/00ffcc" alt="Telegram" />
      </a>
    </div>
  </div>
</section>
<style>
.contact {
  background-color: #0a0a0a;
  padding: 4rem 2rem;
  height: 100vh;
}
.contact h2 {
  text-align: center;
  margin-bottom: 2rem;
}
.contact-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  text-align: center;
}
.contact-wrapper p {
  font-size: 1.1rem;
  max-width: 600px;
  margin-bottom: 2rem;
  color: #cafff5;
}
.contact-form {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  max-width: 400px;
  width: 100%;
}
.contact-form input,
.contact-form textarea {
  padding: 0.5rem;
  border-radius: 0.5rem;
  border: none;
  background: #111;
  color: #00ffcc;
}
.social-links {
  margin-top: 2rem;
  display: flex;
  gap: 1.5rem;
}
.social-links img {
  width: 32px;
  height: 32px;
}
.scroll-button {
  position: absolute;
  bottom: 2rem;
  background: none;
  border: 2px solid #00ffcc;
  color: #00ffcc;
  padding: 0.5rem 1.5rem;
  font-size: 1rem;
  font-family: 'Orbitron', sans-serif;
  cursor: pointer;
  z-index: 3;
  border-radius: 0.5rem;
  animation: bounce-arrow 1.5s infinite;
  transition: background-color 0.3s ease, color 0.3s ease, animation-play-state 0.3s ease;
}
.scroll-button:hover {
  background-color: #00ffcc;
  color: black;
  animation-play-state: paused;
}
.section-button {
  position: relative;
  margin-top: 2rem;
  animation: none;
  width: fit-content;
  align-self: center;
}
@keyframes bounce-arrow {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8px); }
}
</style>
