---
export interface Props {
  title: string;
  image: string;
  description: string;
  versions: string[];
  status: string;
  link: string;
  slug: string;
}

const { title, image, description, versions, status, link, slug } = Astro.props;
---

<article class="mod-card">
  <a href={link}>
    <img transition:name={`img-${slug}`} src={image} alt={title} class="mod-image" />
    <div class="mod-content">
      <h2>{title}</h2>
      <p class="desc">{description}</p>

      <div class="tags">
        {versions.map(v => <span class="tag">{v}</span>)}
        <span class={`tag status ${status.toLowerCase()}`}>{status}</span>
      </div>

      <span class="btn">más detalles →</span>
    </div>
  </a>
</article>

<style>
.mod-card {
  background: rgba(0, 0, 0, 0.6);
  border: 1px solid #00ffc6;
  border-radius: 0.75rem;
  overflow: hidden;
  transition: transform 0.25s ease, box-shadow 0.25s ease;
  height: 480px;
}

.mod-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 0 20px #00ffc644;
}

.mod-card a {
  display: flex;
  flex-direction: column;
  text-decoration: none;
  height: 100%;
}

.mod-image {
  width: 100%;
  height: 220px;
  object-fit: cover;
  border-bottom: 1px solid #00ffc6;
}

.mod-content {
  padding: 1rem 1.5rem;  
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.mod-content h2 {
  color: #00ffc6;
  font-family: "Orbitron", sans-serif;
  margin-bottom: 0.5rem;
}

.mod-content .desc {
  color: #cafff5;
  font-size: 0.95rem;
  line-height: 1.4;
  margin-bottom: 1rem;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.tag {
  background: rgba(0, 255, 198, 0.15);
  border: 1px solid #00ffc6;
  border-radius: 0.3rem;
  color: #00ffc6;
  padding: 0.2rem 0.5rem;
  font-size: 0.8rem;
  font-family: "Orbitron", sans-serif;
  text-transform: uppercase;
}

.status.beta {
  border-color: #ffaa00;
  color: #ffaa00;
}
.status.release {
  border-color: #00ff7f;
  color: #00ff7f;
}
.status.stable {
  border-color: #00bfff;
  color: #00bfff;
}

.btn {
  display: inline-block;
  color: #00ffc6;
  font-weight: bold;
  text-transform: uppercase;
  font-size: 0.9rem;
}
</style>
