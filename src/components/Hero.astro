---
import CustomButton from "./CustomButton.astro";
import { useTranslations } from '../i18n/utils';
import { defaultLang } from "../i18n/ui";

const locale = Astro.currentLocale || defaultLang;
const t = useTranslations(locale);
---
<header>
  <div class="header-bg"></div>
  <h1>Wipodev</h1>
  <p>{t('hero.subtitle')}</p>
  <div class="next-section">
    <CustomButton target="main" animation />
  </div>
</header>

<style>
header {
  position: relative;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: none;
  overflow: hidden;
  text-shadow: 0 0 20px #00ffff;
}
header h1 {
  font-size: 4rem;
  animation: flicker 2s infinite;
}
header p {
  font-size: 1.5rem;
  opacity: 0.8;
}
header .next-section {
  margin-top: 3rem;
}
@keyframes flicker {
  0%, 19%, 21%, 23%, 25%, 54%, 56%, 100% {
    opacity: 1;
  }
  20%, 24%, 55% {
    opacity: 0.3;
  }
}
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: url('https://media.forgecdn.net/attachments/1149/111/fondo-jpeg.jpeg') center/cover no-repeat;
  filter: blur(6px) brightness(0.25);
  z-index: 0;
  pointer-events: none;
  mix-blend-mode: normal;
}
@keyframes glitch-background {
  0%, 95%, 100% { clip-path: inset(0 0 0 0); transform: none; opacity: 1; }
  96% { clip-path: inset(10% 0 85% 0); transform: translateX(-5px); opacity: 0.9; }
  97% { clip-path: inset(85% 0 10% 0); transform: translateX(5px); opacity: 1; }
  98% { transform: translateX(-2px); opacity: 0.85; }
}
.header-bg::before {
  content: "";
  position: absolute;
  inset: 0;
  background: inherit;
  filter: brightness(1.2) contrast(1.3);
  opacity: 0.3;
  animation: glitch-background 5s infinite;
  z-index: 1;
  pointer-events: none;
}
</style>
