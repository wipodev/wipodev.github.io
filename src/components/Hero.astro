---
import NextSectionButton from "./NextSectionButton.astro"
import { useTranslation } from "astro-i18next"

const { t } = useTranslation();
---
<header>
  <div class="header-bg"></div>
  <div class="avatar-wrapper">
    <img class="avatar" src="https://avatars.githubusercontent.com/u/32320534" alt={t('hero.avatarAlt')} />
    <div class="avatar-tooltip">
      {t('hero.tooltip')}<br>
      <a href="#contact">{t('hero.contact')} â†’</a>
    </div>
  </div>
  <h1>Wipodev</h1>
  <p>{t('hero.subtitle')}</p>
  <NextSectionButton target="main" />
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const avatar = document.querySelector('header img.avatar');
      const tooltip = document.querySelector('.avatar-tooltip');
      if (!avatar || !tooltip) {return;}
      const wrapper = avatar.parentElement;
      if (!wrapper) {return;}
      wrapper.addEventListener('mouseenter', () => {
        tooltip.style.display = 'block';
        requestAnimationFrame(() => {
          tooltip.style.opacity = 1;
          tooltip.style.transform = 'scale(1)';
        });
      });
      wrapper.addEventListener('mouseleave', (e) => {
        const related = e.relatedTarget;
        if (!tooltip.contains(related) && related !== avatar) {
          tooltip.style.opacity = 0;
          tooltip.style.transform = 'scale(0.95)';
          setTimeout(() => tooltip.style.display = 'none', 300);
        }
      });
      tooltip.addEventListener('mouseleave', (e) => {
        const related = e.relatedTarget;
        if (!wrapper.contains(related)) {
          tooltip.style.opacity = 0;
          setTimeout(() => tooltip.style.display = 'none', 300);
        }
      });
    });
  </script>
</header>
<style>
header {
  position: relative;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: none;
  overflow: hidden;
  text-shadow: 0 0 20px #00ffff;
}
header h1 {
  font-size: 4rem;
  animation: flicker 2s infinite;
}
header p {
  font-size: 1.5rem;
  opacity: 0.8;
}
@keyframes flicker {
  0%, 19%, 21%, 23%, 25%, 54%, 56%, 100% {
    opacity: 1;
  }
  20%, 24%, 55% {
    opacity: 0.3;
  }
}
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: url('https://media.forgecdn.net/attachments/1149/111/fondo-jpeg.jpeg') center/cover no-repeat;
  filter: blur(6px) brightness(0.25);
  z-index: 0;
  pointer-events: none;
  mix-blend-mode: normal;
}
@keyframes glitch-background {
  0%, 95%, 100% { clip-path: inset(0 0 0 0); transform: none; opacity: 1; }
  96% { clip-path: inset(10% 0 85% 0); transform: translateX(-5px); opacity: 0.9; }
  97% { clip-path: inset(85% 0 10% 0); transform: translateX(5px); opacity: 1; }
  98% { transform: translateX(-2px); opacity: 0.85; }
}
.header-bg::before {
  content: "";
  position: absolute;
  inset: 0;
  background: inherit;
  filter: brightness(1.2) contrast(1.3);
  opacity: 0.3;
  animation: glitch-background 5s infinite;
  z-index: 1;
  pointer-events: none;
}
.avatar-wrapper {
  position: absolute;
  top: 1rem;
  left: 1rem;
  z-index: 3;
}
.avatar {
  width: 64px;
  height: 64px;
  border-radius: 50%;
  border: 2px solid #00ffcc;
  cursor: pointer;
}
.avatar-tooltip {
  position: absolute;
  top: 70px;
  left: 0;
  background: rgba(0, 0, 0, 0.85);
  padding: 1rem;
  border: 1px solid #00ffcc;
  border-radius: 0.5rem;
  color: #cafff5;
  font-size: 0.9rem;
  font-family: 'Orbitron', sans-serif;
  white-space: normal;
  word-break: break-word;
  opacity: 0;
  display: none;
  pointer-events: auto;
  transition: opacity 0.3s ease, transform 0.3s ease;
  transform: scale(0.95);
  width: 220px;
}
.avatar-tooltip a {
  color: #00ffcc;
  text-decoration: underline;
  font-weight: bold;
  display: inline-block;
  margin-top: 0.5rem;
}
</style>
