---
import ProjectsListSection from './ProjectsListSection.astro';

import type { Card } from './ProjectsListSection.astro';

export interface Props {
  cards: Card[];
}

const { cards } = Astro.props as Props;
---
<ProjectsListSection
  id="featured-projects"
  sectionClass="featured-mods"
  title="Proyectos Destacados"
  backgroundColor="#0a0a0a"
  padding="2rem"
  cards={cards}
  nextTarget="#otros-proyectos"
/>
<style>
  .featured-mods h2 {
    text-align: center;
    margin-bottom: 3rem;
  }
</style>
